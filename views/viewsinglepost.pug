html
	head
		title= "Blogsalot"
		link( href="/resources/css/materialize.min.css" type="text/css" rel="stylesheet" )
		link( href="/resources/main.css" type="text/css" rel="stylesheet" )
		link( href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
	body
		nav
			.nav-wrapper
				a.brand-logo(href='/') Home
				ul#nav-mobile.right.hide-on-med-and-down
					li
						a(href="logout") Logout
					li
						a(href='/blogs') Blogsalot Blogs
					li
						a(href='/personalblog') Personal
					li 

		div#header.valign-wrapper
			div.row.valign
				div.col.l12
					h1.center.white-text Please leave a message



		if ( data[0].comments.length == 0) 
			div.container
				div.row
					div.col.l8.offset-l2
						div.card
							div.card-content.z-depth-5
								h3 #{data[0].title}
								p #{data[0].body}
								p #{data[0].firstName}
								br
			div.container
				div.row
					div.col.l8.offset-l2
						div.card
							div.card-content.z-depth-5
								h3 No one took the time to comment under this post
								form(method='post', action= '/viewsinglepost?id=' + data[0].id)
									input(name='comment', type='text', id='comment', placeholder = 'comment' required)
									input(type='Submit', value='Comment', class='button')
		else 
			div.container
				div.row
					div.col.l8.offset-l2
						div.card
							div.card-content.z-depth-5
								h3 #{data[0].title}
								p #{data[0].body}
								p #{data[0].name}
								br
			each comment in data[0].comments
				div.container
					div.row
						div.col.l8.offset-l2
							div.card
								div.card-content.z-depth-5
									h3 Comments:
										//- Here the comments of each user are displayed.
										//- the magic happens at the backend here not the front-end.
										p #{comment.comment} - #{comment.user.name}

			div.container
				div.row
					div.col.l8.offset-l2
						div.card
							div.card-content.z-depth-5
								form(method='post', action= '/viewsinglepost?id=' + data[0].id)
									input(name='comment', type='text', id='comment', placeholder = 'comment' required)
									input(type='Submit', value='Comment', class='button')
									//- Added comment section to each post.
									//- these comments are displayed per post.
									//- The post action are post with the id of the post.
									//- this will make sure that each post will contain its own comments

	footer.page-footer
		div.container
			div.row
				div.col.l6.s12
					h5.white-text Blogsalot
					p.grey-text.text-lighten-3 Thank you for visiting Blogsalot
					p.grey-text.text-lighten-3 and keep on blogging Blogsalotters
				div.col.l4.offset-l2.s12
					h5.white-text Social media
					ul.grey-text.text-lighten-3
						li Git hub
						li Twitter
						li Facebook
		div.footer-copyright
			div.container.grey-text Â© 2025 Copyright Text
	script( src="/resources/jquery-3.1.1.min.js" )
	script( src="/resources/js/materialize.min.js" )
	script( src="/resources/main.js" )