html
	head
		title= "Blogsalot"
		link( href="/resources/css/materialize.min.css" type="text/css" rel="stylesheet" )
		link( href="/resources/main.css" type="text/css" rel="stylesheet" )
		link( href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
	body
		nav
			.nav-wrapper
				a.brand-logo(href='/') Home
				ul#nav-mobile.right.hide-on-med-and-down
					li
						a(href='/sign-up') Sign up Here 
					li
						a(href='/blogs') Blogsalot Blogs
					li
						a(href='/personalblog') Personal
					//- This is the returning nav bar, find something else for the log-in or log-out problem.
					
		div#header.valign-wrapper
			div.row.valign.firstheader
				div.col.l12
					
		main
			div.container
				div.row
					div.col.l8.offset-l2
						div#topcard.card
							div.card-content.z-depth-5.firstcard
								p
									a(href="#") Please log in here to Blogsalot            	   
								
								form(name="myForm" method='POST', action='/login', autocomplete="off" onsubmit="return validateForm()")
									Label(for="email") Email 
									input(name="email", type="email", id="email" placeholder="Email adress")
									Label(for="password") Pasword 
									input(name="password", type="password", id="password" placeholder="Secrate")
									input(type="submit", value="Submit")
									p= message
	footer#footerpage.page-footer
		div.container
			div.row
				div.col.l6.s12
					h5.white-text Blogsalot
					p.grey-text.text-lighten-3 Thank you for visiting Blogsalot
					p.grey-text.text-lighten-3 and keep on blogging Blogsalotters
				div.col.l4.offset-l2.s12
					h5.white-text Social media
					ul.grey-text.text-lighten-3
						li Git hub
						li Twitter
						li Facebook
		div.footer-copyright
			div.container.grey-text Â© 2025 Copyright Text
	script( src="/resources/jquery-3.1.1.min.js" )
	script( src="/resources/js/materialize.min.js" )
	script( src="/resources/main.js" )
	